# Import des librairies
import numpy as np
import matplotlib.pyplot as plt

# Paramètres réseau
N = 50  # nombre de pixels
w = np.random.rand(N, N)  # matrice poids aléatoire pondérée (0,1)
w = (w + w.T) / 2  # symétrisation
sigma = np.random.uniform(-1, 1, N)  # états initiaux

def action(sigma, w):
    S = 0.5 * np.sum(w * (np.subtract.outer(sigma, sigma))**2)
    return S

def gradient(sigma, w):
    grad = np.sum(w * (np.subtract.outer(sigma, sigma)), axis=1) * 2
    return grad

# Descente de gradient simple
lr = 0.01  # learning rate
epochs = 100
S_history = []

for _ in range(epochs):
    grad = gradient(sigma, w)
    sigma -= lr * grad
    S_history.append(action(sigma, w))

# Trace évolution action
plt.plot(S_history)
plt.xlabel("Itérations")
plt.ylabel("Action S")
plt.title("Descente de gradient")
plt.show()

# Etats finaux
plt.scatter(range(N), sigma)
plt.title("Configuration finale des pixels d'information")
plt.show()
